using OpenQA.Selenium;
using OpenQA.Selenium.Chrome;
using OpenQA.Selenium.Support.UI;
using System;

namespace PromotionPlanTests
{
    public class WebDriver
    {
        public static IWebDriver InitializeDriver(string url, int second)
        {
            IWebDriver driver = new ChromeDriver();
            driver.Navigate().GoToUrl(url);
            var wait = new WebDriverWait(driver, TimeSpan.FromSeconds(second));
            wait.Until(SeleniumExtras.WaitHelpers.ExpectedConditions.InvisibilityOfElementLocated(By.Id("modalPopupMask")));
            TimeSpan seconds = TimeSpan.FromSeconds(second);
            driver.Manage().Timeouts().ImplicitWait = seconds;
            return driver;
        }
    }
    public class WebElement
    {
        private IWebDriver _driver;
        private IWebElement _element;
        public WebElement(IWebDriver driver)
        {
            _driver = driver;
        }
        public void SendKeys(string input)
        {

            _element.Clear();
            _element.SendKeys(input);
        }
        public void Click()
        {
            _element.Click();
        }
        public WebElement FindByXpath(string xpath)
        {
            _element = _driver.FindElement(By.XPath(xpath));
            return this;
        }
        public string GetAttribute(string value)
        {
            return _element.GetAttribute(value);
        }
    }
}
